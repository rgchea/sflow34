<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
	
	
    <route id="fos_user_registration_register" pattern="/">
        <default key="_controller">SolucelMyFOSUserBundle:Registration:register</default>
    </route>

    <route id="fos_user_registration_register_client" pattern="/client">
        <default key="_controller">SolucelMyFOSUserBundle:Registration:register</default>
    </route>
    
    <route id="fos_user_registration_register_shipper" pattern="/shipper">
        <default key="_controller">SolucelMyFOSUserBundle:Registration:register</default>
    </route>
    
    <route id="fos_user_registration_register_agent" pattern="/agent">
        <default key="_controller">SolucelMyFOSUserBundle:Registration:register</default>
    </route>                         

    <route id="fos_user_registration_check_email" pattern="/check-email">
        <default key="_controller">SolucelMyFOSUserBundle:Registration:checkEmail</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="fos_user_registration_confirm" pattern="/confirm/{token}">
        <default key="_controller">SolucelMyFOSUserBundle:Registration:confirm</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="fos_user_registration_confirmed" pattern="/confirmed">
        <default key="_controller">SolucelMyFOSUserBundle:Registration:confirmed</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="fos_user_resetting_reset" path="/reset/{token}" methods="GET POST">
        <default key="_controller">SolucelMyFOSUserBundle:Resetting:reset</default>
    </route>
    

</routes>
