    <div class="form-group col-md-6">
        {{ form_label(form.fixingPrice) }}
        {{ form_errors(form.fixingPrice) }}
        {{ form_widget(form.fixingPrice, { 'attr': {'class' : 'form-control' } }
        ) }}
    </div>								
	#}
    
	<div class="clearfix"></div>
	<br>							
	<div class="form-group col-md-6">
		<button class="btn btn-primary" type="button">Reparaciones</button>	
	</div>
	
	<div class="form-group col-md-6">	
		<button class="btn btn-primary" type="button">Repuestos</button>
	</div>
								
	<div class="clearfix"></div>
	
	
	<div class="form-group col-md-6">
		<table id="fixTable">
			<tbody>

				{% set fixCount = 1 %}
				
				{% for fix in fixes %}
					
					<tr id="tr_repair_order_fix_{{fixCount}}">
						<td>
							<label class="required" for="repair_order_fix">Reparación {{fixCount}}&nbsp;</label>
							<select id="repair_order_fix_{{fixCount}}"  class="select2-search">
								<option value="{{fix.deviceFixType.id}}">{{fix.deviceFixType.name}} /Nivel-{{fix.deviceFixType.deviceFixLevel.name}}</option>							
							</select>
						</td>

					</tr>		
					{% set fixCount = fixCount + 1 %}										
				{% endfor %}
				
															
			</tbody>
		</table>
		
	</div>		                        	                            
    
    
	<div class="form-group col-md-6">
		<table id="replacementTable">
			<tbody>

				{% set replacementCount = 1 %}
				{% set replacementAvailable = 1 %}
				
				<script language="JavaScript">
					var arrReplacements = {};
				</script>
				{% set replacementDisabled = entity.orderConfirmation ? 'disabled="disabled"' : ''%}
				
				{% if replacements is not empty %}
					{% for replacement in replacements %}
						{# ////GROUP BY TYPE IN SELECT #}					
						
						<tr id="tr_repair_order_replacement_{{replacementCount}}">
							<td>
								<label class="required" for="">Repuesto {{replacementCount}}&nbsp;</label>
								<select id="repair_order_replacement_{{replacementCount}}" name="replacement[{{replacementCount}}][id]" class="select2-search">
									<option value="{{replacement.deviceReplacement.id}}">{{replacement.deviceReplacement.name}} /Tipo {{replacement.deviceReplacement.DeviceReplacementType.name}}</option>						
								</select>
								<select id="repair_order_replacement_quantity_{{replacementCount}}" name="replacement[{{replacementCount}}][quantity]" class="select2-search">
									<option value="{{replacement.quantity}}">Cantidad = {{replacement.quantity}}</option>						
								</select>													
								
							</td>
							<td>
								Precio:<input type="number" step="any"  disabled="disabled" class="inputTotal" id="replacement_price_{{replacementCount}}" value="{{replacement.price }}" name="replacement[{{replacementCount}}][price]"/>
							</td>
							<td>
								<!-- MANO DE OBRA-->
								Mano de obra:<input type="number" step="any"   class="manoObra" id="replacement_cost_{{replacementCount}}" value="{{replacement.cost}}" name="replacement[{{replacementCount}}][cost]" />
								
								
							</td>												
							<td>
								<div id="replacement_availability_{{replacementCount}}">
									{% if(replacement.available == 1) %}
										<span class="label label-success arrowed arrow-left">DISPONIBLE</span>
										<input type="hidden" id="replacement_available_{{replacementCount}}" value="1" name="replacement[{{replacementCount}}][available]" />
									{% else %}
										<span class="label label-warning arrowed arrow-left">NO DISPONIBLE</span>
										<input type="hidden" id="replacement_available_{{replacementCount}}" value="0" name="replacement[{{replacementCount}}][available]" />
										{% set replacementAvailable = 0 %}
									{% endif %}
								</div>
							</td>														
						</tr>		
						{% set replacementCount = replacementCount + 1 %}										
					{% endfor %}				
				{% endif %}

				<tr>
					<td colspan="4" align="right">&nbsp;</td>
				</tr>
				
				<tr>
					<td colspan="4" align="right" id="tdFixingPrice">
						Total: <input disabled="disabled" id="repair_order_fix_fixingPrice" name="repair_order_fix[fixingPrice]" value="{{entity.fixingPrice}}" />
						<!-- Total: <input id="fixing_price" name="repair_order_fix[fixing_price]" /> -->
					</td>
				</tr>
															
			</tbody>
		</table>
		
	</div>		                        
    
	<div class="clearfix"></div>		

	
	<div class="clearfix"></div>
</fieldset>
