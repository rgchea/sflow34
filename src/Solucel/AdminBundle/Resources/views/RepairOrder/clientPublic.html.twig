						<input disabled=""  type="text" value="{{return.status}}">    
					</div>
					<div class="  form-group col-sm-5"  >
						<label class="required" for="" aria-required="true">Modelo<label>
						<input disabled=""  type="text" value="{{return.model}}">    
					</div>										


					<div class="clearfix"></div>
					<div class="  form-group col-sm-5"  >
						<label class="required" for="" aria-required="true">Reparaciones<label>
						<textarea disabled="" cols="50" rows="5">{{return.fix}}</textarea>
					</div>
					<div class="  form-group col-sm-5"  >
						<label class="required" for="" aria-required="true">IMEI<label>
						<input disabled=""  type="text" value="{{return.imei}}">    
					</div>										

					<div class="clearfix"></div>
					<div class="  form-group col-sm-5"  >
						<label class="required" for="" aria-required="true">Detalle de Reparación<label>
						<textarea disabled="" cols="50" rows="5">{{return.fixDetail}}</textarea>    
