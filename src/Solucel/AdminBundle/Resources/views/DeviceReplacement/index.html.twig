        </a>
    </div>
	<div style="float: left">
        <a class="btn btn-primary btn-lg" href="{{ path('solucel_admin_devicereplacement_load') }}">
            Carga de Datos
        </a>
		
	</div>     
</div>

<div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
    <header>
        <h2> Listado de Repuestos</h2>
    </header>

    <!-- widget div-->
    <div>

        <!-- widget edit box -->
        <div class="jarviswidget-editbox">
            <!-- This area used as dropdown edit box -->

        </div>
        <!-- end widget edit box -->

        <!-- widget content -->
        <div class="widget-body no-padding">
            <div class="widget-body-toolbar">

            </div>

            <table id="dt_table" class="table table-striped  table-hover">
                <tfoot class="dt_tfoot">
                <tr>
                    <th class="pizoteTableID">ID</th>
                    <th>Nombre</th>
                    <th>Código</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th></th>

                </tr>
                </tfoot>
                <thead>
                <tr>
                    {# sorting of properties based on query components #}
                    <th class="pizoteTableID">ID</th>
                    <th>Nombre</th>
                    <th>Código</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th style="width: 100px">Acciones</th>
                </tr>

                </thead>
                <tbody></tbody>

            </table>

        </div>
        <!-- end widget content -->

    </div>
    <!-- end widget div -->
</div>


    <script type="text/javascript">

        var table;

        function fetchData(){

            table  = $('#dt_table').DataTable({
                "columnDefs": [

                    // These are the column name variables that will be sent to the server
                    { "name": "id",   "targets": 0 },
                    { "name": "name",  "targets": 1 },
                    { "name": "code",  "targets": 2 },
                    { "name": "brand",  "targets": 3 },
                    { "name": "model",  "targets": 4 },
                    { "name": "actions",  "targets": 5 },

                ],
                // Server-side parameters
                "processing": true,
                "serverSide": true,
                // Ajax call
                "ajax": {
                    "url": "{{ path('replacement_list_datatables') }}",
                    "type": "POST",
                    //dataType: "html"
                },
                // Classic DataTables parameters
                "paging" : true,
                "info" : true,
                "searching": true,
                "pageLength": 10,
                "order": [[0, 'asc']],
                "language": {
                    "url": "{{ asset('bundles/pizotearkadmin/js/plugin/datatables/dataTables.spanish.lang') }}"
                }

            });

        }

        $(document).ready(function(){

            // Add a text input to each footer cell
            var pos = 1;
            $('#dt_table tfoot th').each( function () {
                var title = $(this).text();
                if(pos != 6){//columna Actions
                    $(this).html( "<input id='input" + pos + "' type='text' class='form-control' style='font-family:Arial, FontAwesome; width:100%'/>" );
                }

                pos ++;
            });


            fetchData();

            // Apply the search
            pos = 1;
            table.columns().every( function () {
                var that = this;

                $("#input"+pos).on( 'keyup change', function () {
                    if ( that.search() !== this.value )
                    {
                        that.search( this.value ).draw();
                    }
                });
                pos++;
            });



        });

    </script>

{% endblock %}


