{% block body -%}
{{ parent() }}

    <style>
        .dataTables_filter {
            display: none;
        }
    </style>

<div class="row">
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">

    </div>
    <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8">
        <a class="pull-right btn btn-primary btn-lg" href="{{ path('solucel_admin_devicereplacement_new') }}">
