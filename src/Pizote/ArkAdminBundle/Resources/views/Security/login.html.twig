{% extends "PizoteArkAdminBundle::security.html.twig" %}

{% block title %}
{{ parent() }}
Login
{% endblock %}

{% block fos_user_content %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="smart-form client-form">


    <fieldset>
        
        {% if error %}
            <div class="alert alert-danger fade in">
                    <button data-dismiss="alert" class="close">
                            Ã—
                    </button>
                    <i class="fa-fw fa fa-times"></i>
                    {{ error|trans({}, 'FOSUserBundle') }}
            </div>
            <br>
        {% endif %}
        
        <section>
            <label for="username">Usuario:</label><br />
            <label class="input"> 
                <input type="text" id="username" name="_username" value="" required="required" value="{{ last_username }}">&nbsp;<i class="icon-append fa fa-user"></i>
                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> </b></label>
        </section>

        <section>
            <label for="password">Contrase&ntilde;a:</label><br />
            <label class="input"> 
                <input type="password" id="password" name="_password" required="required">&nbsp;<i class="icon-append fa fa-lock"></i>
                <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Ingrese su contrase&ntilde;a</b> </label>
            <div class="note">
                <a href="{{ path('my_fos_user_resetting_request') }}">Olvid&oacute; su contrase&ntilde;a</a>
            </div>
        </section>
  
		
        <section>
        	
            <label class="checkbox" style="padding-left: 20px">
            	<input type="checkbox" id="remember_me" name="_remember_me" checked="" >Mantenerse activo
            </label>
        </section>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />    

    </fieldset>

    <footer>
        <button type="submit" class="btn btn-primary">
            Ingresar
        </button>
    </footer>
    
</form>


  
        

{% endblock fos_user_content %}